<!DOCTYPE html>
<html>
<% include ../partials/head %>

    <body>
        <%- include('../partials/nav',{langList: langList}); %>

            <!-- Page Content -->
            <div class="container">
                <% for (var i = 0; i < posts.length; i++) { %>
                    <!-- Blog Post -->
                    <div class="card mb-4">
                        <img class="card-img-top" src="<%-posts[i].postbanner.url%>" alt="Card image cap">
                        <div class="card-body">
                            <h2 class="card-title">
                                <%= posts[i].posttitle.translatableContent[defaultLocale] %>
                            </h2>
                            <p class="card-text postBody">
                                <%= posts[i].postbody.translatableContent[defaultLocale].substring(0, 300) %>...
                            </p>
                            <a href="/post/<%-posts[i].metaData.identifier%>" class="btn btn-primary">Read More &rarr;</a>
                        </div>

                    </div>

                    <% } %>

            </div>
            <!-- Pagination -->
            <ul class="pagination justify-content-center mb-4">
                <li class="page-item">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="#">4</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="#">5</a>
                </li>
            </ul>
            </div>
            <!-- /.container -->

            <% include ../partials/footer %>
    </body>

</html>