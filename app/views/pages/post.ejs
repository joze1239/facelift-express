<!DOCTYPE html>
<html>
<% include ../partials/head %>

    <body>
        <%- include('../partials/nav',{langList: langList}); %>

            <!-- Page Content -->
            <div class="container">

                <div class="row">

                    <!-- Post Content Column -->
                    <div class="col-lg-12">

                        <!-- Title -->
                        <h1 class="mt-4">
                            <%= post.posttitle.translatableContent[defaultLocale] %>
                        </h1>


                        <hr>


                        <!-- Preview Image -->
                        <img class="img-fluid rounded postbanner-img" src="<%-post.postbanner.url%>" alt="Post">

                        <hr>

                        <!-- Post Content -->
                        <p class="postBody">
                            <%= post.postbody.translatableContent[defaultLocale] %>
                        </p>
                        <hr>


                    </div>


                </div>
                <!-- /.row -->

            </div>
            <!-- /.container -->

            </div>
            <!-- /.container -->

            <% include ../partials/footer %>


    </body>

</html>